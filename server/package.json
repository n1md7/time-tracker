{
  "name": "koa-template",
  "version": "1.0.0",
  "description": "koaJs template",
  "repository": {
    "type": "git",
    "url": "git@github.com:bichiko/koajs-template.git"
  },
  "scripts": {
    "dev": "ts-node-dev src/index.ts",
    "prod:build": "rimraf dist && tsc",
    "prod": "export NODE_ENV=production && node dist/index.js",
    "test": "jest --coverage --forceExit",
    "mongo:init": "npx migrate-mongo init",
    "mongo:create": "npx migrate-mongo create",
    "mongo:up": "npx migrate-mongo up",
    "mongo:down": "npx migrate-mongo down",
    "mongo:status": "npx migrate-mongo status",
    "mongo:info": "echo 'Please visit https://github.com/seppevs/migrate-mongo'",
    "mysql:create:seed": "npx sequelize seed:generate --name ",
    "mysql:create:migration": "npx sequelize migration:generate --name ",
    "mysql:migrations": "npx sequelize db:migrate",
    "mysql:migrations:undo": "npx sequelize db:migrate:undo ",
    "mysql:migrations:undo:all": "npx sequelize db:migrate:undo:all",
    "mysql:seeds": "npx sequelize db:seed:all",
    "mysql:sequelize": "npx sequelize",
    "mysql:info": "npx sequelize --help && echo '\nPlease visit https://sequelize.org/master/manual/migrations.html'",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "keywords": [
    "koa",
    "koajs",
    "node",
    "nodejs",
    "template"
  ],
  "author": "harry kodua",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.12.13",
    "@jest/globals": "^26.6.2",
    "@types/koa": "^2.11.7",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/koa-static": "^4.0.1",
    "@types/mysql2": "github:types/mysql2",
    "@types/node": "^14.14.25",
    "@types/sequelize": "^4.28.9",
    "@types/socket.io": "^2.1.13",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "axios-mock-adapter": "^1.19.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^26.6.3",
    "sequelize-cli": "^6.2.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@koa/router": "^10.0.0",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "dotenv": "^8.2.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-morgan": "^1.0.1",
    "koa-socket-2": "^2.0.0",
    "koa-static": "^5.0.0",
    "migrate-mongo": "^8.1.4",
    "mongodb": "^3.6.4",
    "mongoose": "^5.11.15",
    "mysql-migrations": "^1.0.7",
    "mysql2": "^2.2.5",
    "node-cache": "^5.1.2",
    "sequelize": "^6.5.0",
    "sequelize-cli": "^6.2.0",
    "socket.io": "^4.0.0",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  }
}
